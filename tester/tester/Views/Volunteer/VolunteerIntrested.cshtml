@model IEnumerable<tester.Models.Request>

@{
    ViewBag.Title = "VolunteerIntrested";
}
<h2>Volunteer</h2>
@using (@Html.BeginForm())
{
    <div class="TitleVolunteer">
        <h3>All requests:</h3>
    </div>
    <div>
        @foreach (var hulpvraag in Model) 
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@hulpvraag.description</h3>
                    <a href="@Url.Action("showInterest", "Volunteer", new { RequestID = hulpvraag.requestID })">Interested</a> 
                    <a href="@Url.Action("reportRequest", "Volunteer", new { RequestID = hulpvraag.requestID })">Report</a> 
                </div>
                <div class="panel-body">
                    <b>Locatie: </b>@hulpvraag.location <br>
                    <b>Vervoerstype gewenst: </b>@hulpvraag.transportType <br>
                    <b>Aantal vrijwilligers gewenst: </b>@hulpvraag.totalVolunteer <br>
                    <b>Begintijd: </b>@hulpvraag.startDate <br>
                    <b>Eindtijd: </b>@hulpvraag.endDate <br>
                    <b>Reistijd: </b>@hulpvraag.travelTime <b>minuten.</b> <br>
                    <b>Is urgent: </b>@hulpvraag.urgency
                </div>
            </div>
        }
    </div>
    <div id="buttons">
        @*<input type="submit" name="interestedBTN" value="interested">
        <input type="submit" name="Report" value="Report" />*@
    </div>
    <br />
    <div class="TitleVolunteer">
        <h3>The requests you're interested in:</h3>
    </div>
    <div>
        @foreach (var hulpvraag in tester.Models.Database.GetAllVisibleInterestedRequests(tester.Models.Database.acid)) 
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@hulpvraag.description</h3>
                    @*<a href="@Url.Action("showInterest", "Volunteer", new { RequestID = hulpvraag.requestID })">Interested</a> 
                    <a href="@Url.Action("reportRequest", "Volunteer", new { RequestID = hulpvraag.requestID })">Report</a>*@ 
                </div>
                <div class="panel-body">
                    <b>Locatie: </b>@hulpvraag.location <br>
                    <b>Vervoerstype gewenst: </b>@hulpvraag.transportType <br>
                    <b>Aantal vrijwilligers gewenst: </b>@hulpvraag.totalVolunteer <br>
                    <b>Begintijd: </b>@hulpvraag.startDate <br>
                    <b>Eindtijd: </b>@hulpvraag.endDate <br>
                    <b>Reistijd: </b>@hulpvraag.travelTime <b>minuten.</b> <br>
                    <b>Is urgent: </b>@hulpvraag.urgency
                </div>
            </div>
        }
    </div>

}