@using System.ComponentModel.DataAnnotations;
@{
    ViewBag.Title = "Index";

}

<h2>EyeCT4Participation</h2>

@using (@Html.BeginForm())
{
    <div class="error">@ViewBag.loginfail<br></div>
    <div class="input-group">
        <label for="usr">Username:</label>
        <input type="text" name="username" class="form-control" placeholder="Username" id="usr">
    </div>
    <br />
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" name="password" class="form-control" placeholder="Password" id="pwd">
    </div>
    <input type="submit" class="btn btn-default" name="Login" value="Login" />
    @*<input type="button" name="Register" value="Register" onclick="location.href='@Url.Action("Register", "Login")'" />*@
}
